- if !logged_in?
  = render 'homepage/header'
  .login-container
    %h1.main-message-text Login
    .login-form-container
      = form_with(url: login_path, scope: :session, local: true, html: {class: 'form-container'}) do |f|
        = f.label :email, class: 'form-element'
        = f.email_field :email, class: 'form-control form-element', placeholder: "john.doe@example.com"
        = f.label :password, class: 'form-element'
        = f.password_field :password, class: 'form-control form-element', placeholder: "••••••"
        = f.label :remember_me, class: "checkbox inlline" do
          = f.check_box :remember_me
          %span Remember me
        %br
        = f.submit "Login", class: "btn btn-primary"
      %br
      %p.form-element
        Don't have an account? 
        = link_to "Sign up now", signup_path
- else
  :javascript
    window.location.href="/"
